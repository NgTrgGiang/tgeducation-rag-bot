# ============================================
# TG Education RAG Chatbot - Environment Config
# ============================================

# === OpenRouter API ===
# Lấy tại: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Model (chọn 1 trong các model trên OpenRouter):
#   google/gemini-2.0-flash-001     (rẻ, nhanh)
#   meta-llama/llama-3.3-70b        (miễn phí)
#   openai/gpt-4o-mini              (rẻ, tốt)
#   anthropic/claude-3.5-sonnet     (chất lượng cao)
LLM_MODEL=google/gemini-2.0-flash-001

# === Facebook Messenger ===
# Lấy tại: https://developers.facebook.com
FB_PAGE_ACCESS_TOKEN=your_page_access_token_here
FB_VERIFY_TOKEN=tgeducation_verify_2026
FB_APP_SECRET=your_app_secret_here

# === Embedding (giữ mặc định) ===
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# === ChromaDB (giữ mặc định) ===
CHROMA_PERSIST_DIR=./chroma_db
COLLECTION_NAME=tgeducation_kb
TOP_K=5
KB_FILE=tgeducation_knowledge_base.json

# === Server ===
PORT=5000
